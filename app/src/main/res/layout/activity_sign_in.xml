<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_up_activity"
    tools:context=".SignInActivity"
    >




            <EditText
                android:id="@+id/edit_emial_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:hint="Email Address"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginTop="210dp"
                android:inputType="textEmailAddress"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="4dp"
                android:backgroundTint="@color/white"
                />

            <EditText
                android:id="@+id/edit_password_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/edit_emial_in"
                android:hint="Password"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginTop="12dp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_password"
                android:drawableRight="@drawable/ic_visibility"
                android:drawablePadding="4dp"
                android:backgroundTint="@color/white"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/btn_log_in"
                android:text="Log In"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/txt_forget"
                android:layout_marginTop="20dp"
                android:textColor="@color/state_txt"
                android:enabled="false"
                android:background="@drawable/btn_log_in"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/btn_create_account"
                android:text="Create New Account"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/btn_log_in"
                android:background="@drawable/btn_signup"
                android:layout_marginTop="10dp"
                />


            <TextView
                android:id="@+id/txt_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password ?"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/edit_password_in"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"

                android:layout_marginTop="25dp"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="150dp"
                android:id="@+id/progress_bar_load_in"
                android:visibility="invisible"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:src="@drawable/mess"/>



</androidx.constraintlayout.widget.ConstraintLayout>